<!DOCTYPE html>
<html>
  <head>
    <title>TwitterClone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>
      body,html {
        height:100%;
      }
      .container {
        min-height:100%;
      }
      .footer {
        height:40px;
        margin-top:-40px;
      }
    </style>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render "layouts/navbar" %>
    <% end %>
    <%= toastr_flash %>
    <%= yield %>
    
    <% if user_signed_in? %>
      <% if (controller.controller_name ==  'registrations')  %>
        <br><br><br><br><br>
        <br><br><br><br><br>
      <% end %>
      <!--footer-->
      <footer class="footer">
          <!-- Top Footer Area Start -->
          <div class="foo_top_header_one section_padding_100_70">
              <div class="container">
                  <div class="row">
                    <hr>
                  </div>
              </div>
          </div>
          <!-- Footer Bottom Area Start -->
          <div class=" kilimanjaro_bottom_header_one section_padding_50 text-center">
              <div class="container">
                  <div class="row">
                      <div class="col-12">
                          <p>Downloaded from <a href="https://bootsnipp.com/snippets/6Xa15#" target="_blank">bootsnipp</a> && Modified by RAMASOFTDEV</p>
                      </div>
                  </div>
              </div>
          </div>
      </footer>
    <% end %>
  </body>
</html>
