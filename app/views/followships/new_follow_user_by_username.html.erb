<!-- Page Content -->
<div class="container">
    <div class="row">
        <!-- Blog Entries Column -->
        <div class="col-lg-8">
            <!-- Title -->
            <!-- Comments Form -->
            <div class="card my-4">
                <h5 class="card-header">Username to follow:</h5>
                <div class="card-body">
                    <%= form_with url: create_follow_user_by_username_path, method: :post do |form| %>  
                        <div class="form-group">
                            <%= form.text_field :username, value: "#{params[:username]}", class: "form-control", rows:"1" %>
                        </div>
                        <%= form.submit "Search username and follow", class: 'btn btn-md btn-primary' %>
                    <% end %>                
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->