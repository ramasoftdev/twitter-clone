<!-- Page Content -->
<div class="container">
    <div class="row">
        <!-- Blog Entries Column -->
        <div class="col-lg-8">
            <!-- Title -->
            <!-- Comments Form -->
            <div class="card my-4">
              <h5 class="card-header">Username to follow:</h5>
              <div class="card-body">
                  <%= form_with(model: tweet) do |form| %>
                    <div class="form-group">
                        <%= form.text_field :tweet_content, class: "form-control", rows:"1", max: '280' %>
                    </div>
                    <%= form.submit%>
                  <% end %>
              </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
    <% if !@tweet.id.nil? %>
      <%= link_to 'Show', @tweet, class: 'btn btn-sm btn-warning' %>
    <%end%>
    <%= link_to 'Back', tweets_path, class: 'btn btn-sm btn-secondary' %>
</div>
<!-- /.container -->
